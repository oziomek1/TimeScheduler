<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ripple"
    android:paddingBottom="@dimen/fab_margin"
    android:paddingEnd="@dimen/fab_margin"
    android:paddingLeft="@dimen/fab_margin"
    android:paddingTop="@dimen/fab_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ExpandableListView
            android:id="@+id/cat_expandable_category"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/cat_button"
            android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft" />

        <!--    <ListView
                android:id="@+id/exp_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cat_button" /> -->
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/cat_subfab1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right|end"
        android:layout_marginBottom="200dp"
        android:layout_marginRight="@dimen/fab_margin"
        android:elevation="6dp"
        android:src="@drawable/add_category"
        android:visibility="invisible"
        app:backgroundTint="@color/colorFab"
        app:pressedTranslationZ="12dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/cat_subfab2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right|end"
        android:layout_marginBottom="140dp"
        android:layout_marginRight="@dimen/fab_margin"
        android:elevation="6dp"
        android:src="@drawable/add_subcategory"
        android:visibility="invisible"
        app:backgroundTint="@color/colorFab"
        app:pressedTranslationZ="12dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/cat_subfab3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right|end"
        android:layout_marginBottom="80dp"
        android:layout_marginRight="@dimen/fab_margin"
        android:elevation="6dp"
        android:src="@drawable/edit"
        android:visibility="invisible"
        app:backgroundTint="@color/colorFab"
        app:pressedTranslationZ="12dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/cat_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right|end"
        android:layout_marginBottom="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:elevation="6dp"
        android:src="@drawable/add_white"
        app:pressedTranslationZ="12dp" />
</android.support.design.widget.CoordinatorLayout>