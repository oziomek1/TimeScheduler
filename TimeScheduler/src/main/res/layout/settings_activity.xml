<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/set_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:text="@string/set_notification"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Switch
        android:id="@+id/set_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/set_textView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="50dp"
        android:text="" />

    <include
        android:id="@+id/set_button1"
        layout="@layout/set_button1"
        android:layout_below="@+id/set_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include
        android:id="@+id/set_button2"
        layout="@layout/set_button2"
        android:layout_below="@+id/set_button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>